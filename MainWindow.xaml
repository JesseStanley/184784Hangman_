<Window x:Class="_184784Hangman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_184784Hangman"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <StackPanel Width="517">
            <RadioButton x:Name="rbHard" Content="Hard"/>
            <RadioButton x:Name="rbMedium" Content="Medium"/>
            <RadioButton x:Name="rbEasy" Content="Easy" Width="791"/>
            <Button x:Name="btnStartGame" Content="Click to start the game or replay!" Click="BtnStartGame_Click"/>
            <TextBox x:Name="txtLetterInput" MaxLength="1"/>
            <Button x:Name="btnLetterCheck" Content="Click to Check for Letter" Click="BtnLetterCheck_Click"/>
            <TextBlock x:Name="lblOutput"/>
        </StackPanel>
    </Canvas>
</Window>

